{
  "name": "scaffolder-vscode",
  "displayName": "scaffolder-vscode",
  "description": "Enabling scaffolder capabilities via a vscode extension!",
  "version": "0.12.0",
  "publisher": "ctf-vscode",
  "engines": {
    "vscode": "^1.45.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/galElmalah/scaffolder-vscode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:scaffolder-vscode.createTemplateInFolder",
    "onCommand:scaffolder-vscode.createTemplateInFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scaffolder-vscode.createTemplateInFolder",
        "title": "Scaffolder: Generate Template"
      },
      {
        "command": "scaffolder-vscode.createTemplateInFile",
        "title": "Scaffolder: Generate Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "scaffolder-vscode.createTemplateInFolder",
          "group": "scaffolder-vscode",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "scaffolder-vscode.createTemplateInFile",
          "group": "scaffolder-vscode",
          "when": "!explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.45.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "scaffolder-cli": "^1.4.15"
  }
}
